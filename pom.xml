<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>de.gmasil</groupId>
    <artifactId>webproject-ng</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <packaging>pom</packaging>

    <name>Webproject NG</name>
    <description>Next Generation of Webproject using Vue.js frontend</description>

    <inceptionYear>2021 - 2022</inceptionYear>
    <url>https://github.com/gmasil/Webproject-NG</url>

    <organization>
        <name>Gmasil</name>
        <url>https://gmasil.de</url>
    </organization>

    <licenses>
        <license>
            <name>CC BY-NC-SA 4.0</name>
            <url>https://creativecommons.org/licenses/by-nc-sa/4.0/legalcode.txt</url>
        </license>
    </licenses>

    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.6.3</version>
    </parent>

    <modules>
        <module>webproject-frontend</module>
        <module>webproject-backend</module>
    </modules>

    <properties>
        <java.version>11</java.version>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <!-- spring native -->
        <spring-native.version>0.11.2</spring-native.version>
        <!-- versions -->
        <modelmapper.version>3.0.0</modelmapper.version>
        <!-- test versions -->
        <gherkin-extension.version>1.1</gherkin-extension.version>
        <!-- plugin versions -->
        <license-plugin.version>4.1</license-plugin.version>
        <jacoco-plugin.version>0.8.7</jacoco-plugin.version>
        <jib-plugin.version>3.2.0</jib-plugin.version>
        <hibernate-enhance-plugin.version>5.6.4.Final</hibernate-enhance-plugin.version>
        <docker-plugin.version>0.39.0</docker-plugin.version>
        <!-- image build -->
        <image.registry>registry.gmasil.de/docker</image.registry>
        <image.name>${project.parent.artifactId}</image.name>
        <target.image>${image.registry}/${image.name}</target.image>
        <target.tag>${project.version}</target.tag>
    </properties>

    <build>
        <pluginManagement>
            <plugins>
                <!-- configure license plugin and disable for child modules -->
                <plugin>
                    <groupId>com.mycila</groupId>
                    <artifactId>license-maven-plugin</artifactId>
                    <version>${license-plugin.version}</version>
                    <inherited>true</inherited>
                    <configuration>
                        <skip>true</skip>
                        <aggregate>true</aggregate>
                        <licenseSets>
                            <licenseSet>
                                <header>${project.basedir}/license/header/cc_by-nc-sa_4.0.txt</header>
                                <includes>
                                    <include>**/pom.xml</include>
                                    <include>dev/**</include>
                                    <include>webproject-frontend/**</include>
                                    <include>webproject-*/src/**</include>
                                </includes>
                                <excludes>
                                    <exclude>**/LICENSE.txt</exclude>
                                    <exclude>**/target/**</exclude>
                                    <exclude>**/dist/**</exclude>
                                    <exclude>**/node/**</exclude>
                                    <exclude>**/node_modules/**</exclude>
                                    <exclude>**/.babelrc</exclude>
                                    <exclude>**/.browserslistrc</exclude>
                                </excludes>
                                <properties>
                                    <owner>Gmasil</owner>
                                    <software.name>${project.name}</software.name>
                                </properties>
                            </licenseSet>
                        </licenseSets>
                        <mapping>
                            <factories>SCRIPT_STYLE</factories>
                            <scss>DOUBLESLASH_STYLE</scss>
                            <vue>XML_STYLE</vue>
                        </mapping>
                    </configuration>
                    <executions>
                        <execution>
                            <id>check</id>
                            <phase>validate</phase>
                            <goals>
                                <goal>check</goal>
                            </goals>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <!-- enable license plugin for parent only -->
            <plugin>
                <groupId>com.mycila</groupId>
                <artifactId>license-maven-plugin</artifactId>
                <inherited>false</inherited>
                <configuration>
                    <skip>false</skip>
                </configuration>
            </plugin>
            <!-- disable installation of java artifact -->
            <plugin>
                <artifactId>maven-install-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
            <!-- disable deployment of java artifact -->
            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <configuration>
                    <skip>true</skip>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>
